{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "WebApi.Services.DbSnapshot": "Debug",
      "WebApi.Services.DbSnapshot.DbSnapshotService": "Debug"
    }
  },

  "Backups": {
    "Directory": "App_Data/Backups",
    "FilePrefix": "snapshot",
    "RunMigrationsAfterRestore": false, 
    "KeepLastLocalCopies": 10
  },

  "ConnectionStrings": {
    "mySql": "server=localhost;user=root;password=root;database=SunnyEast"
  },
  "JWT": {
    "Secret": "this is a secret!this is a secret!this is a secret!this is a secret!this is a secret!this is a secret!this is a secret!this is a secret!",
    "RefreshTokenValidityInDays": 30,
    "TokenValidityInDays": 2
  },
  "Mailgun": {
    "ApiKey": "<env:MAILGUN_API_KEY>",
    "Domain": "<env:MAILGUN_DOMAIN>",
    "Sender": "noreply@yourdomain.com",
    "FromName": "Солнечный Восток",
    "BaseUri": "https://api.mailgun.net/v3",
    "ConfirmationUrlBase": "https://localhost:5289/verify"
  }
}
