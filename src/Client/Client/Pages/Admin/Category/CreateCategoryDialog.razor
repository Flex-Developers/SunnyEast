@using Client.Infrastructure.Services.Category
@using Application.Contract.ProductCategory.Commands

@inject ICategoryService CategoryService

<MudDialog Class="category-dialog">
    <TitleContent>
        <MudText Typo="Typo.h6" Class="dialog-title">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-2 mb-n1"/>
            Добавить категорию
        </MudText>
    </TitleContent>

    <DialogContent>
        <!-- Поле с именем категории -->
        <MudTextField @bind-Value="_command.Name" Label="Имя" Required="true" Class="dialog-text-field"/>

        <!-- Поле для ссылки на изображение -->
        <MudTextField @bind-Value="_command.ImageUrl" Label="Ссылка на изображение" AutoGrow="true" FullWidth="true" Clearable="true" Class="dialog-text-field"/>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="@(Cancel)" Color="Color.Secondary" Variant="Variant.Outlined">Отмена</MudButton>
        <MudButton Color="Color.Primary" OnClick="@(async () => await CreateAsync())">Добавить</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public Action OnSuccess { get; set; } = null!;

    private readonly CreateProductCategoryCommand _command = new() { Name = "" };

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private async Task CreateAsync()
    {
        if (!string.IsNullOrWhiteSpace(_command.Name))
        {
            var success = await CategoryService.Post(_command);
            if (success)
            {
                MudDialog.Close();
                OnSuccess?.Invoke();
            }
        }
    }

}

<style>
    .category-dialog {
        width: 60%; /* Установите ширину на 80% от экрана */
        max-width: 600px; /* Задайте максимальную ширину */
    }

    .dialog-title {
        display: flex;
        align-items: center;
        font-weight: 600;
        margin-bottom: 16px;
    }

    .dialog-text-field {
        margin-bottom: 16px;
        width: 100%;
    }
    
</style>