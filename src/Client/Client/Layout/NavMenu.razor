@using Application.Contract.Identity
<MudNavMenu>
    <CascadingAuthenticationState>
        @* Навигация в мобильной версии для всех сотрудников *@
        <AuthorizeView Roles="@ApplicationRoles.AllStaffCsv">
            <MudHidden Breakpoint="Breakpoint.MdAndUp">
                <MudText Typo="Typo.subtitle1" Color="Color.Primary" Class="ml-4 my-3">
                    <MudIcon Icon="@Icons.Material.Filled.Navigation"/>
                    Навигация по сайту
                </MudText>
                <MudNavLink Href="/category" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Category">
                    Категория
                </MudNavLink>
                <MudNavLink Href="/products" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ShoppingBag">
                    Продукты
                </MudNavLink>
                <MudNavLink Href="/orders" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Assignment">
                    Заказы
                </MudNavLink>

                <MudDivider/>
            </MudHidden>
        </AuthorizeView>

        <AuthorizeView Roles="@ApplicationRoles.SuperAdmin">
            <MudText Typo="Typo.subtitle1" Color="Color.Primary" Class="ml-4 my-3"><MudIcon Icon="@Icons.Material.Filled.Security"/>
                Панель супер админа
            </MudText>
            <MudNavLink Href="/admin/category" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.GridView">
                Категория
            </MudNavLink>
            <MudNavLink Href="/admin/products" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ShoppingCart">
                Продукты
            </MudNavLink>
            <MudNavLink Href="/admin/orders" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Assignment">
                Заказы
            </MudNavLink>
            <MudNavLink Href="/admin/orders/archive" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Archive">
                Давние заказы
            </MudNavLink>
            <MudNavLink Href="/admin/shops" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Store">
                Магазины
            </MudNavLink>
            <MudNavLink Href="/admin/users" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.People">
                Пользователи
            </MudNavLink>
            <MudNavLink Href="/admin/staff" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.BusinessCenter">
                Персонал
            </MudNavLink>
            <MudNavLink Href="/admin/media/upload" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CloudUpload">
                Загрузка изображений
            </MudNavLink>
            <MudNavLink Href="/admin/database" Icon="@Icons.Material.Filled.Storage">
                База данных
            </MudNavLink>
        </AuthorizeView>
        
        <AuthorizeView Roles="@ApplicationRoles.Administrator">
            <MudText Typo="Typo.subtitle1" Color="Color.Primary" Class="ml-4 my-3"><MudIcon Icon="@Icons.Material.Filled.Security"/>
                Панель админа
            </MudText>
            <MudNavLink Href="/admin/category" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.GridView">
                Категория
            </MudNavLink>
            <MudNavLink Href="/admin/products" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ShoppingCart">
                Продукты
            </MudNavLink>
            <MudNavLink Href="/admin/orders" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Assignment">
                Заказы
            </MudNavLink>
            <MudNavLink Href="/admin/media/upload" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CloudUpload">
                Загрузка изображений
            </MudNavLink>
        </AuthorizeView>
        
        <AuthorizeView Roles="@ApplicationRoles.Salesman">
            <MudText Typo="Typo.subtitle1" Color="Color.Primary" Class="ml-4 my-3"><MudIcon Icon="@Icons.Material.Filled.Store"/>
                Панель продавца
            </MudText>
            <MudNavLink Href="/admin/orders" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Assignment">
                Заказы
            </MudNavLink>
        </AuthorizeView>
        
    </CascadingAuthenticationState>
</MudNavMenu>