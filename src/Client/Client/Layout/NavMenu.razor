@using Application.Contract.Identity
<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Sunny East</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Продукты</MudNavLink>
    
    @* NavLinks for regular clients *@
    
    
    <CascadingAuthenticationState>
        <AuthorizeView Roles="@($"{ApplicationRoles.Administrator} {ApplicationRoles.Salesman}")">
            <Authorized>
                <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">
                    Продовец
                </MudText>

            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="@ApplicationRoles.Administrator">
            <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">
                Администрация
            </MudText>
            <MudNavLink Href="/admin/category" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Category">
                Категории
            </MudNavLink>
            <MudNavLink Href="/admin/products" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Toys">
                Продукты
            </MudNavLink>
            <MudNavLink Href="/admin/shops" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Shop">
                Магазины
            </MudNavLink>
        </AuthorizeView>
    </CascadingAuthenticationState>
</MudNavMenu>