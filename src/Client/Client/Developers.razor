<style>
    /* ====== БАЗА СТРАНИЦЫ ====== */
    .developers-page {
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
        /* фон без «ручных» цветов: работает в обеих темах */
        background: linear-gradient(
            135deg,
            var(--mud-palette-background) 0%,
            var(--mud-palette-surface) 50%,
            var(--mud-palette-background) 100%
        );
    }

    /* ====== HERO ====== */
    .headers-section {
        position: relative;
        padding: 3rem 2rem 2rem;
        text-align: center;
        z-index: 2
    }

    .hero-section {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        z-index: 1;
        pointer-events: none;
        overflow: hidden
    }

    .hero-background {
        position: absolute;
        inset: 0;
        z-index: 1
    }

    .floating-shape {
        position: absolute;
        border-radius: 50%;
        opacity: .08;
        animation: float 8s ease-in-out infinite
    }

    .floating-shape.shape-1 {
        width: 200px;
        height: 200px;
        background: var(--brand-orange);
        top: 10%;
        left: 10%;
        animation-delay: 0s
    }

    .floating-shape.shape-2 {
        width: 150px;
        height: 150px;
        background: var(--brand-yellow);
        top: 20%;
        right: 15%;
        animation-delay: 2s
    }

    .floating-shape.shape-3 {
        width: 300px;
        height: 300px;
        background: var(--brand-green);
        bottom: 20%;
        left: 5%;
        animation-delay: 4s
    }

    .floating-shape.shape-4 {
        width: 100px;
        height: 100px;
        background: var(--brand-brown);
        top: 60%;
        right: 30%;
        animation-delay: 1s
    }

    .floating-shape.shape-5 {
        width: 250px;
        height: 250px;
        background: var(--brand-orange);
        bottom: 10%;
        right: 10%;
        animation-delay: 3s
    }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
        margin: 0 auto
    }

    .main-title {
        margin-bottom: 1rem;
        animation: titleSlideIn 1s ease-out
    }

    .title-underline {
        width: 120px;
        height: 4px;
        background: linear-gradient(90deg, var(--brand-orange), var(--brand-green));
        margin: 0 auto 2rem;
        border-radius: 2px;
        animation: underlineGrow 1s ease-out .5s both
    }

    .sub-title {
        color: var(--mud-palette-text-primary);
        margin-bottom: 1rem;
        animation: titleSlideIn 1s ease-out .3s both
    }

    .hero-description {
        color: var(--mud-palette-text-secondary);
        max-width: 600px;
        margin: 0 auto;
        animation: titleSlideIn 1s ease-out .6s both
    }

    /* ====== ОСНОВНОЙ КОНТЕНТ ====== */
    .main-content {
        position: relative;
        z-index: 2;
        padding: 1rem 0 3rem;
        background: inherit
    }

    /* ====== СТАТИСТИКА ====== */
    .team-stats {
        margin-bottom: 3rem;
        animation: fadeInUp 1s ease-out .8s both
    }

    .stat-card {
        background: var(--mud-palette-surface);
        border-radius: 20px;
        padding: 2rem 1rem;
        text-align: center;
        backdrop-filter: blur(15px);
        border: 1px solid var(--mud-palette-divider);
        box-shadow: 0 8px 32px rgba(0, 0, 0, .1);
        transition: all .3s ease;
        position: relative;
        overflow: hidden
    }

    .stat-card::before {
        content: "";
        position: absolute;
        inset: 0;
        left: -100%;
        background: linear-gradient(90deg, transparent, rgba(0, 0, 0, .06), transparent);
        transition: left .5s ease
    }

    .stat-card:hover::before {
        left: 100%
    }

    .stat-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, .15)
    }

    .stat-icon {
        color: var(--mud-palette-primary);
        margin-bottom: 1rem
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: .5rem;
        background: linear-gradient(135deg, var(--brand-orange), var(--brand-green));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text
    }

    .stat-label {
        color: var(--mud-palette-text-secondary);
        font-weight: 500;
        font-size: .9rem
    }

    /* ====== КОМАНДА ====== */
    .team-section {
        margin-bottom: 3rem
    }

    .section-title {
        margin-bottom: 3rem;
        color: var(--mud-palette-text-primary);
        position: relative
    }

    .section-title::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, var(--brand-orange), var(--brand-green));
        border-radius: 2px
    }

    .team-grid {
        animation: fadeInUp 1s ease-out 1s both
    }

    /* карточка разработчика */
    .developer-card {
        position: relative;
        background: var(--mud-palette-surface);
        border-radius: 24px;
        padding: 2.5rem 2rem;
        backdrop-filter: blur(20px);
        border: 1px solid var(--mud-palette-divider);
        box-shadow: 0 8px 32px rgba(0, 0, 0, .1);
        transition: all .4s cubic-bezier(.175, .885, .32, 1.275);
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
        min-height: 600px
    }

    .animate-card-1 {
        animation: cardSlideIn .8s ease-out 1.2s both
    }

    .animate-card-2 {
        animation: cardSlideIn .8s ease-out 1.4s both
    }

    .card-glow {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(var(--mud-palette-primary-rgb), .12) 0%, transparent 70%);
        opacity: 0;
        transition: opacity .3s ease;
        pointer-events: none
    }

    .developer-card:hover .card-glow {
        opacity: 1
    }

    .card-background {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(var(--mud-palette-primary-rgb), .03), rgba(0, 0, 0, .02));
        opacity: 0;
        transition: opacity .3s ease;
        pointer-events: none
    }

    .developer-card:hover .card-background {
        opacity: 1
    }

    .developer-card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 25px 50px rgba(0, 0, 0, .18)
    }

    .card-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
        border-radius: 20px
    }

    .photo-container {
        position: relative;
        margin-bottom: 1.5rem;
        flex-shrink: 0
    }

    .dev-photo, .dev-photo-placeholder {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid rgba(var(--mud-palette-primary-rgb), .2);
        transition: all .3s ease
    }

    .dev-photo-placeholder {
        background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #999
    }

    .developer-card:hover .dev-photo, .developer-card:hover .dev-photo-placeholder {
        border-color: var(--mud-palette-primary);
        transform: scale(1.1)
    }

    .photo-overlay {
        position: absolute;
        bottom: 8px;
        right: 8px
    }

    .status-indicator {
        width: 18px;
        height: 18px;
        border-radius: 50%;
        border: 3px solid var(--mud-palette-surface);
        box-shadow: 0 2px 8px rgba(0, 0, 0, .2)
    }

    .status-indicator.online {
        background: #4CAF50;
        animation: pulse 2s infinite
    }

    .dev-info {
        width: 100%
    }

    .dev-name {
        color: var(--mud-palette-text-primary);
        margin-bottom: .5rem;
        font-weight: 700;
        font-size: 1.3rem
    }

    .dev-role {
        color: var(--mud-palette-primary);
        font-weight: 600;
        font-size: 1rem
    }

    .developers-page .card-content {
        flex: 1;
        margin-bottom: 1.5rem;
        text-align: center
    }

    .dev-description {
        color: var(--mud-palette-text-secondary);
        line-height: 1.6;
        margin-bottom: 1.5rem
    }

    /* скиллы */
    .skills-container {
        display: flex;
        flex-wrap: wrap;
        gap: .6rem;
        margin-bottom: 1rem;
        justify-content: center
    }

    .skill-tag {
        background: linear-gradient(135deg, rgba(var(--mud-palette-primary-rgb), .10), rgba(255, 204, 0, .10));
        color: var(--mud-palette-primary);
        padding: .4rem .9rem;
        border-radius: 14px;
        font-size: .85rem;
        font-weight: 600;
        border: 1px solid rgba(var(--mud-palette-primary-rgb), .25);
        transition: all .3s ease
    }

    .developer-card:hover .skill-tag {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(var(--mud-palette-primary-rgb), .2)
    }

    /* кнопки карточки */
    .card-actions {
        display: flex;
        gap: .75rem;
        flex-wrap: wrap;
        justify-content: center
    }

    .action-btn {
        border-radius: 12px !important;
        text-transform: none !important;
        font-weight: 600 !important;
        transition: all .3s ease !important;
        flex: 1;
        min-width: 120px
    }

    .primary-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(var(--mud-palette-primary-rgb), .3) !important
    }

    .secondary-btn:hover {
        transform: translateY(-2px);
        background: rgba(var(--mud-palette-primary-rgb), .06) !important
    }

    .ghost-btn {
        opacity: .6
    }

    /* ====== КОНТАКТЫ ====== */
    .contact-section {
        margin-bottom: 3rem;
        animation: fadeInUp 1s ease-out 1.6s both
    }

    .contact-card {
        position: relative;
        background: var(--mud-palette-surface);
        border-radius: 24px;
        padding: 3rem 2rem;
        text-align: center;
        backdrop-filter: blur(20px);
        border: 1px solid var(--mud-palette-divider);
        box-shadow: 0 8px 32px rgba(0, 0, 0, .1);
        overflow: hidden;
        max-width: 600px;
        margin: 0 auto
    }

    .contact-background {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(var(--mud-palette-primary-rgb), .06), rgba(255, 204, 0, .06));
        opacity: 0;
        transition: opacity .3s ease
    }

    .contact-card:hover .contact-background {
        opacity: 1
    }

    .contact-content {
        position: relative;
        z-index: 2
    }

    .contact-icon {
        color: var(--mud-palette-primary);
        margin-bottom: 1rem
    }

    .contact-title {
        color: var(--mud-palette-text-primary);
        margin-bottom: 1rem;
        font-weight: 700
    }

    .contact-description {
        color: var(--mud-palette-text-secondary);
        margin-bottom: 2rem;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto
    }

    .contact-btn {
        border-radius: 16px !important;
        padding: .75rem 2rem !important;
        font-weight: 600 !important;
        text-transform: none !important;
        margin-bottom: 1rem !important;
        transition: all .3s ease !important
    }

    .contact-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 24px rgba(var(--mud-palette-primary-rgb), .3) !important
    }

    .contact-note {
        color: var(--mud-palette-text-secondary);
        font-style: italic
    }

    /* ====== АДАПТИВ ====== */
    @@media (max-width: 768px) {
        .hero-section {
            min-height: 50vh;
            padding: 2rem 1rem
        }

        .main-title {
            font-size: 2rem !important
        }

        .sub-title {
            font-size: 1.5rem !important
        }

        .floating-shape {
            opacity: .05
        }

        .developer-card {
            min-height: 600px
        }

        .card-header {
            flex-direction: column;
            text-align: center
        }

        .photo-container {
            margin-bottom: 1rem
        }

        .dev-photo, .dev-photo-placeholder {
            width: 180px;
            height: 180px
        }

        .card-actions {
            flex-direction: column
        }

        .action-btn {
            width: 100%
        }

        .contact-card {
            padding: 2rem 1rem
        }
    }

    @@media (max-width: 480px) {
        .main-title {
            font-size: 1.75rem !important
        }

        .developer-card {
            padding: 2rem 1.5rem;
            min-height: 400px
        }

        .stat-card {
            padding: 1.5rem 1rem
        }

        .stat-number {
            font-size: 2rem
        }

        .dev-photo, .dev-photo-placeholder {
            width: 160px;
            height: 160px
        }
    }

    /* ====== АНИМАЦИИ ====== */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0) scale(1)
        }
        33% {
            transform: translateY(-30px) rotate(120deg) scale(1.1)
        }
        66% {
            transform: translateY(15px) rotate(240deg) scale(.9)
        }
    }

    @@keyframes titleSlideIn {
        from {
            opacity: 0;
            transform: translateY(30px)
        }
        to {
            opacity: 1;
            transform: translateY(0)
        }
    }

    @@keyframes underlineGrow {
        from {
            width: 0
        }
        to {
            width: 120px
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px)
        }
        to {
            opacity: 1;
            transform: translateY(0)
        }
    }

    @@keyframes cardSlideIn {
        from {
            opacity: 0;
            transform: translateY(50px) scale(.9)
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1)
        }
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1
        }
        50% {
            opacity: .5
        }
    }

    /* Градиентный фон страницы разработчиков поверх цвета MudBlazor */
    .mud-paper.developers-page {
        /* базовый цвет поверхности + лёгкий градиент-тинт */
        background: linear-gradient(
            135deg,
