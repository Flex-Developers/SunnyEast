@namespace Client.Components.Dialogs
<MudDialog MaxWidth="MaxWidth.Medium" FullWidth="true">
    <TitleContent>
        <MudText Typo="Typo.h6" Class="d-flex align-items-center">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-2" />
            Подтвердите удаление
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Class="mb-3">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton StartIcon="@Icons.Filled.Cancel" OnClick="Cancel">Отмена</MudButton>
        <MudButton StartIcon="@Icons.Filled.Delete" Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Подтвердить</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string? ContentText { get; set; }

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Close(DialogResult.Cancel());
}