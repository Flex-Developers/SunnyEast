@namespace Client.Components.Dialogs
<MudDialog Class="delete-dialog">
    <TitleContent>
        <MudText Typo="Typo.h6" Class="d-flex align-items-center">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-2"/>
            Подтвердите удаление
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Style="word-wrap: break-word; overflow-wrap: break-word; white-space: normal;">
            @($"""Вы хотите удалить "{Name}"? """)
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton StartIcon="@Icons.Material.Filled.Cancel" OnClick="Cancel">Отмена</MudButton>
        <MudButton StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error" Variant="Variant.Filled" OnClick="Delete">Подтвердить</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string? Name { get; set; }

    void Delete() => MudDialog.Close(DialogResult.Ok(true));

    void Cancel() => MudDialog.Close(DialogResult.Cancel());
}
<style>
    .delete-dialog {
        width: 95%; 
        max-width: 450px; 
    }
</style>