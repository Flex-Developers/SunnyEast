@namespace Client.Components.Dialogs
<MudDialog Class="cancel-dialog">
    <TitleContent>
        <MudText Typo="Typo.h6" Class="d-flex align-items-center">
            <MudIcon Icon="@Icons.Material.Filled.Cancel" Class="mr-2"/>
            Подтвердите отмену
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Style="word-wrap: break-word; overflow-wrap: break-word; white-space: normal;">
            @($"""Вы хотите отменить заказ "{Content}"? """)
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton StartIcon="@Icons.Material.Filled.Cancel" OnClick="Cancel">Отмена</MudButton>
        <MudButton StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Подтвердить</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string? Content { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));

    void Cancel() => MudDialog.Close(DialogResult.Cancel());
}
<style>
    .cancel-dialog {
        width: 95%; 
        max-width: 450px; 
    }
</style>