@using Microsoft.AspNetCore.Components.Authorization
@using Application.Contract.Identity
@using Client.Components.Common  

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <MudProgressCircular Class="mx-auto mt-6" />
                </Authorizing>

                <NotAuthorized>
                    <AccessGuard />   
                </NotAuthorized>
            </AuthorizeRouteView>

            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>

        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudText Typo="Typo.h4" Align="Align.Center" Class="mt-6">Страница не найдена</MudText>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    [Inject] private Client.Infrastructure.Realtime.IOrderRealtimeService RealtimeService { get; set; } = default!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await RealtimeService.StartAsync();
        }
    }
}